@model Bakery.DB.Cake

@{
    ViewBag.Title = "Delete";
    var images = default(List<Bakery.DB.Image>);
    if (ViewBag.Images != null)
    {
        images = (List<Bakery.DB.Image>)ViewBag.Images;
    }
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Cake</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ImageId)
        </dt>

        <dd>
            @Html.ImageHelper(Model.ImageId, Url, "upload-image-img")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CakeName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CakeName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CakeDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CakeDescription)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CakePrice)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CakePrice)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AddedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AddedDate)
        </dd>

        <dt class="cake-photo">
            Cake Photos:
        </dt>

        <dd>
        </dd>

        @foreach (var image in images)
        {
            <dt>
                Image #@image.ImageId
            </dt>

            <dd>
                @Html.ImageHelper(image, Url, "cake-photo details")
            </dd>
        }
    </dl>

    @using (Html.BeginForm("DeleteCake", "Cake", new { id = Model.CakeId }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()


        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
